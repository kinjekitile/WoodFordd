@model AddBookingHistoryViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Add Booking History</h2>

<div class="row">
    <div class="col-lg-8">

        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Add Booking History</h3>

            </div><!-- /.box-header -->

            @using (Html.BeginForm()) {

                

                @Html.HiddenFor(x=>x.BookingHistory.UserId)
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.PickupDate, "Pickup Date", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.PickupDate, new { placeholder = "Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.PickupDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.DropOffDate, "Dropoff Date", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.DropOffDate, new { placeholder = "Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.DropOffDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.PickupBranchId, "Pickup Branch", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.BranchFor(m => m.BookingHistory.PickupBranchId, new { placeholder = "Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.PickupBranchId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.DropoffBranchId, "Return Branch", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.BranchFor(m => m.BookingHistory.DropoffBranchId, new { placeholder = "Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.DropoffBranchId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.Email, "Email", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.Email, new { placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.AlternateId, "ID Number", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.AlternateId, new { placeholder = "ID Number", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.AlternateId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.RentalDays, "Rental Days", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.RentalDays, new { placeholder = "Rental Days", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.RentalDays)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.TotalForLoyaltyAward, "Total eligible for loyalty points", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.TotalForLoyaltyAward, new { placeholder = "", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.TotalForLoyaltyAward)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.TotalAmount, "Total Amount", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.TotalAmount, new { placeholder = "", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.TotalAmount)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BookingHistory.ExternalId, "External ID", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.BookingHistory.ExternalId, new { placeholder = "External ID", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.BookingHistory.ExternalId)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="Button" />
                    </div>
                    }
                </div>

    </div>
</div>


@section scripts {
    <script type="text/javascript">

        $('#BookingHistory_PickupDate,#BookingHistory_DropOffDate').datepicker({
            autoclose: true,
            todayHighlight: true,
            format: 'yyyy/mm/dd',
        });


    </script>
}