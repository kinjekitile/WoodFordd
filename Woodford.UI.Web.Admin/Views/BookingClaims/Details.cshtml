@model BookingClaimViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Claim Booking</h2>

<div class="row">
    <div class="col-lg-6">

        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Claim Booking</h3>

            </div><!-- /.box-header -->
            <div class="box-body">
                <p>User: @Model.User.FirstName @Model.User.LastName - @Model.User.Email has put in a claim for a booking:</p>

                <div class="row">
                    <div class="col-lg-4">
                        Pickup Date:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.BookingPickupDate.ToString("ddd dd MMM yyyy")
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Dropoff Date:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.BookingDropoffDate.ToString("ddd dd MMM yyyy")
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Pickup Location:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.PickupBranch.Title
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Pickup Location:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.DropoffBranch.Title
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Renter Email:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.Email
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Renter Firstname:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.FirstName
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Renter Lastname:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.LastName
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        Renter Id:
                    </div>
                    <div class="col-lg-4">
                        @Model.Claim.IdNumber
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        @Html.ActionLink("Add booking history for claim", "AddBookingHistory", new { id = Model.Claim.Id }, new { @class = "button" })
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
