@model BranchRateCodeExclusionsViewModel
@{
    ViewBag.Title = "Branch Rate Code Exclusions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Branch Rate Code Exclusions</h1>
}

@using (Html.BeginForm("Filter", "BranchRateCodeExclusions", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Filter</h3>
        </div><!-- /.box-header -->

        <div id="filter" class="box-body">

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.BranchId, "Branch", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.BranchFor(m => m.BranchId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BranchId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ShowPastExclusions, "Show Past Exclusions", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.CheckBoxFor(m => m.ShowPastExclusions)
                    @Html.ValidationMessageFor(m => m.ShowPastExclusions)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>

        </div>
    </div>

}

@if (Model.Filtered) {

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Rate Codes excluded at branch</h3>
        </div><!-- /.box-header -->

        <div id="results" class="box-body">
            @Html.ActionLink("Add Exclusion", "Add", new {  branchId = Model.BranchId })
            <table class="table table-bordered table-striped dataTable">
                <tr>
                    <td></td>
                    <td>Rate Code</td>
                    <td>Date Range</td>
                </tr>

                @foreach (var exclusion in Model.BranchRateCodeExclusions.Items) {


                    <tr>
                        <td>@Html.ActionLink("Edit", "Edit", "BranchRateCodeExclusions", new { id = exclusion.Id }, null) </td>
                        <td>@exclusion.RateCode.Title 
                        <td>@exclusion.StartDate.ToString("dd/MM/yyyy") - @exclusion.EndDate.ToString("dd/MM/yyyy")</td></td>
                        <td>
                            @using (Html.BeginForm("Delete", "BranchRateCodeExclusions", new { id = exclusion.Id, branchId = Model.BranchId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                                @Html.Hidden("exclusionId", exclusion.Id)
                                
                                <button type="submit" class="btn btn-primary">Delete Exclusion</button>
                            }
                    </tr>

                }
            </table>



        </div>
    </div>

}