                    @Html.TextBoxFor(m => m.Branch.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Branch.Title)
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Branch.BranchSubTitle, "Branch Sub Title", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Branch.BranchSubTitle, new { placeholder = "Branch Sub Title", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Branch.BranchSubTitle)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Branch.BranchAddress, "Branch Address", new { @class = "col-sm-2 control-label" })
