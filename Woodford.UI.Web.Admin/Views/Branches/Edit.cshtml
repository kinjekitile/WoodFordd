@model BranchViewModel
@{
    ViewBag.Title = "Edit Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Edit Branch</h1>
}

        @{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.Branch.GetType(), entityIdValue = Model.Branch.Id, pageContent = true, pageContentId = Model.Branch.PageContent.Id, contactContent = true, callbackContent = true }); }





<div class="box box-primary">
    @*<div class="box-header with-border">
        <h3 class="box-title">Edit Branch</h3>
    </div>*@
    <div class="box-body">

        


        @using (Html.BeginForm("Edit", "Branches", FormMethod.Post, new { id = Model.Branch.Id, enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {
            @Html.HiddenFor(m => m.Branch.Id)
            @Html.HiddenFor(m => m.Branch.PageContent.Id);



            @Html.ValidationSummary()

