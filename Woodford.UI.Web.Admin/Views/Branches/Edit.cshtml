                        @Html.TextAreaFor(m => m.Branch.BranchAddress, new { placeholder = "Branch Address", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Branch.BranchAddress)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
