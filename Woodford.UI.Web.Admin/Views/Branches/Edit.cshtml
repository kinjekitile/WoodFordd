                            <label for="Branch_IsAirport">
                                @*@Html.LabelFor(m => m.Branch.IsAirport, "Is Airport", new { @class = "col-sm-2 control-label" })*@
                                @Html.CheckBoxFor(m => m.Branch.IsAirport) Is Airport
                            </label>
                        </div>
                        @Html.ValidationMessageFor(m => m.Branch.IsAirport)

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Branch.Email, "Branch Email", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Branch.Email, new { placeholder = "Branch Email Address", @class = "form-control" })
