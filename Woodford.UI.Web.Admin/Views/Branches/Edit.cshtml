                    @Html.LabelFor(m => m.BranchImage, "Branch Image", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">

                        <p class="help-block">
                            @if (Model.Branch.FileUploadId.HasValue) {
                                <img src="@Url.Action("Index", "Uploads", new { id = Model.Branch.BranchImage.Id, filename = Model.Branch.BranchImage.Title + Model.Branch.BranchImage.FileExtension, width = 100, height = 100, crop = 1 })" alt="@Model.Branch.Title" />
                            }
                            Please upload a valid image file if you would like the image to change.
                        </p>
                        <input type="file" id="BranchImage" name="BranchImage" />
                        @Html.ValidationMessageFor(m => m.BranchImage)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Branch.PageUrl, "Page Url", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Branch.PageUrl, new { placeholder = "Page Url", @class = "form-control" })
