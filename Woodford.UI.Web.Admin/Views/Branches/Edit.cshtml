                    @Html.LabelFor(m => m.Branch.AfterHoursTelephoneNumber, "Branch After Hours Telephone", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Branch.AfterHoursTelephoneNumber, new { placeholder = "Branch After Hours Telephone Number", @class = "form-control" })
