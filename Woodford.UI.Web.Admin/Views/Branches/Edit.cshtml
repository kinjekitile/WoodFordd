                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Branch.FaxNumber, new { placeholder = "Branch Fax Number", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Branch.FaxNumber)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Branch.WeatherApiId, "Weather API ID", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Branch.WeatherApiId, new { placeholder = "Weather API ID", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Branch.WeatherApiId)
