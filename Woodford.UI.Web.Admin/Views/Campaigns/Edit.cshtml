@model CampaignViewModel
@{
    ViewBag.Title = "Edit Campaign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Campaigns</h1>
}

@{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.Campaign.GetType(), entityIdValue = Model.Campaign.Id, pageContent = true, pageContentId = Model.Campaign.PageContent.Id }); }



<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit Campaign</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Edit", "Campaigns", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {
        @Html.HiddenFor(m => m.Campaign.Id)
        @Html.HiddenFor(m => m.Campaign.PageContent.Id)
        @*@Html.HiddenFor(m => m.Campaign.IsArchived)*@
        <div class="box-body">

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.Title, "Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Campaign.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Campaign.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.RateCodeId, "Rate Code", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.RateCodeFor(m => m.Campaign.RateCodeId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Campaign.RateCodeId)
                </div>
            </div>    
            
            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.StartDate, "Start Date", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Campaign.StartDate, new { placeholder = "Start Date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Campaign.StartDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.EndDate, "End Date", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Campaign.EndDate, new { placeholder = "End Date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Campaign.EndDate)
                </div>
            </div>  
            
            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.Description, "Description", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Campaign.Description, new { placeholder = "Description", @class = "form-control", rows = "4" })
                    @Html.ValidationMessageFor(m => m.Campaign.Description)
                </div>
            </div> 

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.PageUrl, "Page Url", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Campaign.PageUrl, new { placeholder = "Page Url", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Campaign.PageUrl)
                </div>
            </div>

            @Html.HiddenFor(m => m.Campaign.FileUploadId)
            
            <div class="form-group">
                @Html.LabelFor(m => m.CampaignImage, "Campaign Image", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <p class="help-block">
                        @if (Model.Campaign.FileUploadId.HasValue) {
                            <img src="@Url.Action("Index", "Uploads", new { id = Model.Campaign.CampaignImage.Id, filename = Model.Campaign.CampaignImage.Title + Model.Campaign.CampaignImage.FileExtension, width = 100, height = 100, crop = 1 })" alt="@Model.Campaign.Title" />
                        }
                        Please upload a valid image file if you would like the image to change.
                    </p>
                    <input type="file" id="CampaignImage" name="CampaignImage" />
                    @Html.ValidationMessageFor(m => m.CampaignImage)
                </div>
            </div>

            @Html.HiddenFor(m => m.Campaign.SearchResultIconFileUploadId)

            <div class="form-group">
                @Html.LabelFor(m => m.CampaignSearchResultIconImage, "Campaign Search Result Icon Image", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <p class="help-block">
                        @if (Model.Campaign.SearchResultIconFileUploadId.HasValue) {
                            <img src="@Url.Action("Index", "Uploads", new { id = Model.Campaign.SearchResultIconImage.Id, filename = Model.Campaign.CampaignImage.Title + Model.Campaign.SearchResultIconImage.FileExtension, width = 100, height = 100, crop = 1 })" alt="@Model.Campaign.Title" />
                        }
                        Please upload a valid image file if you would like the image to change.
                    </p>
                    <input type="file" id="CampaignSearchResultIconImage" name="CampaignSearchResultIconImage" />
                    @Html.ValidationMessageFor(m => m.CampaignSearchResultIconImage)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.PageContent.PageTitle, "Page Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Campaign.PageContent.PageTitle, new { placeholder = "Page Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Campaign.PageContent.PageTitle)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.PageContent.MetaKeywords, "Meta Keywords", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Campaign.PageContent.MetaKeywords, new { placeholder = "Meta Keywords", @class = "form-control", rows = "3", cols = "20" })
                    @Html.ValidationMessageFor(m => m.Campaign.PageContent.MetaKeywords)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.PageContent.MetaDescription, "Meta Description", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Campaign.PageContent.MetaDescription, new { placeholder = "Meta Description", @class = "form-control", rows = "3", cols = "20" })
                    @Html.ValidationMessageFor(m => m.Campaign.PageContent.MetaDescription)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Campaign.PageContent.PageContent, "Page Content", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Campaign.PageContent.PageContent, new { @class = "form-control", rows = "10", cols = "80" })
                    @Html.ValidationMessageFor(m => m.Campaign.PageContent.PageContent)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label for="Campaign_IsArchived">
                            @Html.CheckBoxFor(m => m.Campaign.IsArchived) Is Archived
                        </label>
                    </div>
                    @Html.ValidationMessageFor(m => m.Campaign.IsArchived)
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update Campaign</button>
                </div>
            </div>

        </div>
        
    }
</div>

@section scripts {
    <!-- CK Editor -->
    <script src="https://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>
    <script types="text/javascript">
        $(function () {
            CKEDITOR.replace('Campaign_PageContent_PageContent');
        });
        $(document).ready(function () {
            cleanDate('Campaign_StartDate');
            cleanDate('Campaign_EndDate');
            
            $('#Campaign_StartDate,#Campaign_EndDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'yyyy/mm/dd',
            });            
        });
    </script>
}