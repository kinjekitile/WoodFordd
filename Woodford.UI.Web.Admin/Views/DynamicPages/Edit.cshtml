@model DynamicPageViewModel
@{
    ViewBag.Title = "Edit Dynamic Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Dynamic Pages</h1>
}

@{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.Page.GetType(), entityIdValue = Model.Page.Id }); }

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit Page</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Edit", "DynamicPages", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
        @Html.HiddenFor(m => m.Page.PageContent.Id)
        @Html.HiddenFor(m => m.Page.Id)
        <div class="box-body">

            <div class="form-group">
                @Html.LabelFor(m => m.Page.AdminDescription, "Admin Name", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Page.AdminDescription, new { placeholder = "Admin Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Page.AdminDescription)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Page.PageUrl, "Page Url", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">                    
                    @Html.TextBoxFor(m => m.Page.PageUrl, new { placeholder = "Page Url", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Page.PageUrl)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Page.PageContent.PageTitle, "Page Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Page.PageContent.PageTitle, new { placeholder = "Page Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Page.PageContent.PageTitle)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Page.PageContent.MetaKeywords, "Meta Keywords", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Page.PageContent.MetaKeywords, new { placeholder = "Meta Keywords", @class = "form-control", rows = "3", cols = "20" })
                    @Html.ValidationMessageFor(m => m.Page.PageContent.MetaKeywords)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Page.PageContent.MetaDescription, "Meta Description", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Page.PageContent.MetaDescription, new { placeholder = "Meta Description", @class = "form-control", rows = "3", cols = "20" })
                    @Html.ValidationMessageFor(m => m.Page.PageContent.MetaDescription)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Page.PageContent.PageContent, "Page Content", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Page.PageContent.PageContent, new { @class = "form-control", rows = "10", cols = "80" })
                    @Html.ValidationMessageFor(m => m.Page.PageContent.PageContent)
                </div>
            </div>

           
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>

        </div>
        
    }
</div>

@section scripts {
    <!-- CK Editor -->
    <script src="https://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>
    <script types="text/javascript">
        $(function () {
            CKEDITOR.replace('Page_PageContent_PageContent');
        });
    </script>
}