@model EmailSignatureCampaignViewModel
@{
    ViewBag.Title = "Add Signature Campaign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add Email Signature Campaign</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Add", "EmailSignatureCampaigns", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {


        <div class="box-body">

            @Html.ValidationSummary()



            <div class="form-group">
                @Html.LabelFor(m => m.Signature.CampaignName, "Name", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Signature.CampaignName, new { placeholder = "Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Signature.CampaignName)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label for="Signature_IsDefault">
                            @Html.CheckBoxFor(m => m.Signature.IsDefault) Is Default
                        </label>
                    </div>
                    @Html.ValidationMessageFor(m => m.Signature.IsDefault)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label for="Signature_IsLive">
                            @Html.CheckBoxFor(m => m.Signature.IsLive) Is Live
                        </label>
                    </div>
                    @Html.ValidationMessageFor(m => m.Signature.IsLive)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MainContentImage, "Main Content Image", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="MainContentImage" name="MainContentImage" />
                    <p class="help-block">Please upload a valid image file.</p>
                    @Html.ValidationMessageFor(m => m.MainContentImage)
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.MainContentNarrowImage, "Main Content Narrow Image", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="MainContentNarrowImage" name="MainContentNarrowImage" />
                    <p class="help-block">Please upload a valid image file.</p>
                    @Html.ValidationMessageFor(m => m.MainContentNarrowImage)
                </div>
            </div>
          

            <div class="form-group">
                @Html.LabelFor(m => m.FooterContentImage, "Footer Content", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="FooterContentImage" name="FooterContentImage" />
                    <p class="help-block">Please upload a valid image file.</p>
                    @Html.ValidationMessageFor(m => m.FooterContentImage)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FooterContentNarrowImage, "Footer Content Narrow", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="FooterContentNarrowImage" name="FooterContentNarrowImage" />
                    <p class="help-block">Please upload a valid image file.</p>
                    @Html.ValidationMessageFor(m => m.FooterContentNarrowImage)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SideContentImage, "Side Content", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="SideContentImage" name="SideContentImage" />
                    <p class="help-block">Please upload a valid image file.</p>
                    @Html.ValidationMessageFor(m => m.SideContentImage)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UnderlineContentImage, "Underline Content", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="UnderlineContentImage" name="UnderlineContentImage" />
                    <p class="help-block">Please upload a valid image file.</p>
                    @Html.ValidationMessageFor(m => m.UnderlineContentImage)
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add Email Signature Campaign</button>
                </div>
            </div>

        </div>


    }
</div>