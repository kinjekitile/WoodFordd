@model FileUploadViewModel
@{
    ViewBag.Title = "Add File Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>File Uploads</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add File</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Add", "FileUploads", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {
        
        <div class="box-body">

            <div class="form-group">
                @Html.LabelFor(m => m.File.Title, "Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.File.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.File.Title)
                </div>
            </div>

           

            <div class="form-group">
                @Html.LabelFor(m => m.Upload, "File Upload", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <input type="file" id="Upload" name="Upload" />
                    @*<p class="help-block">Please upload a valid image file.</p>*@
                    @Html.ValidationMessageFor(m => m.Upload)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add File</button>
                </div>
            </div>

        </div>
        
    }
</div>

@section scripts {
    <!-- CK Editor -->
    <script src="https://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>
    <script types="text/javascript">
        $(function () {
            CKEDITOR.replace('Branch_PageContent_PageContent');
        });
    </script>
}