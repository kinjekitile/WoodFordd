@model FileUploadViewModel
@{
    ViewBag.Title = "Edit File Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>File Uploads</h1>
}

@{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.File.GetType(), entityIdValue = Model.File.Id }); }

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit File</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Edit", "FileUploads", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {
        
        <div class="box-body">

            <div class="form-group">
                @Html.LabelFor(m => m.File.Title, "Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.File.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.File.Title)
                </div>
            </div>

           
            <div class="form-group">
                @Html.HiddenFor(m => m.File.Id)
                @Html.LabelFor(m => m.Upload, "Upload File", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">

                    <p class="help-block">                        
                            <img src="@Url.Action("Index", "Uploads", new { id = Model.File.Id, filename = Utilities.GenerateSlug(Model.File.Title) + Model.File.FileExtension, width = 100, height = 100, crop = 1 })" alt="@Model.File.Title" />                        
                        Please upload a valid file if you would like the image to change.
                    </p>
                    <input type="file" id="Upload" name="Upload" />
                    @Html.ValidationMessageFor(m => m.Upload)
                </div>
            </div>           
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update File</button>
                </div>
            </div>

        </div>
        
    }
</div>

@section scripts {
    <!-- CK Editor -->
    <script src="https://cdn.ckeditor.com/4.4.3/standard/ckeditor.js"></script>
    <script types="text/javascript">
        $(function () {
            CKEDITOR.replace('Branch_PageContent_PageContent');
        });
    </script>
}