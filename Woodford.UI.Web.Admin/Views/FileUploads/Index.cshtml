@model ListOf<FileUploadModel>
@{
    ViewBag.Title = "File Uploads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>File Uploads</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Uploads</h3>
    </div><!-- /.box-header -->

    <div class="box-body">
        <div class="admin-buttons">
            @Html.ActionLink("Add new File", "Add", "FileUploads")
        </div>
    </div>
    @if (Model.Items.Count() > 0) {
        <div class="box-body no-padding">
            <table class="table table-condensed">
                <tr>
                    <td></td>
                    <td></td>
                    <th scope="col">Title</th>
                    <th scope="col">File Url</th>
                </tr>

                @foreach (var f in Model.Items) {
                    <tr>
                        <td>@Html.ActionLink("Edit", "Edit", "FileUploads", new { id = f.Id }, null)</td>
                        <td>                            
                            <img src="@Url.Action("Index", "Uploads", new { id = f.Id, filename = Utilities.GenerateSlug(f.Title) + f.FileExtension, width = 100, height = 100, crop = 1 })" alt="@f.Title" />
                        </td>
                        <td>@f.Title</td>
                        <td><input type="text" readonly="readonly" value="@Url.Action("Index", "Uploads", new { id = f.Id, filename = Utilities.GenerateSlug(f.Title) + f.FileExtension })" /></td>
                    </tr>
                }

            </table>
        </div>

    } else {
        <div class="box-body">
            <p>No files have been uploaded yet</p>
        </div>
    }
    @if (Model.Items.Count() > 0) {
        @Html.Partial("_PaginationPartial", Model.Pagination)
    }
</div>
