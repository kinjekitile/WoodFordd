@model HerospaceItemViewModel
@{
    ViewBag.Title = "Edit Herospace Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Herospace</h1>
}

@*@{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.Item.GetType(), entityIdValue = Model.Item.Id }); }*@

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit Herospace Item</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Edit", "Herospace", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {
        @Html.HiddenFor(m => m.Item.Id)        
        
        <div class="box-body">

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.Item.Title, "Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Item.Title, new { placeholder = "Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Item.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Item.LinkUrl, "Link Url", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Item.LinkUrl, new { placeholder = "Link Url", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Item.LinkUrl)
                </div>
            </div>            

            <div class="form-group">
                @Html.LabelFor(m => m.Item.SortOrder, "Sort Order", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Item.SortOrder, new { placeholder = "Sort Order", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Item.SortOrder)
                </div>
            </div>   

            @Html.HiddenFor(m => m.Item.FileUploadId)

            <div class="form-group">
                @Html.LabelFor(m => m.HerospaceImage, "Herospace Image", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    <p class="help-block">                        
                        <img src="@Url.Action("Index", "Uploads", new { id = Model.Item.HerospaceImage.Id, filename = Utilities.GenerateSlug(Model.Item.HerospaceImage.Title) + Model.Item.HerospaceImage.FileExtension, width = 100, height = 100, crop = 1 })" alt="@Model.Item.Title" />                        
                        Please upload a valid image file if you would like the image to change.
                    </p>
                    <input type="file" id="HerospaceImage" name="HerospaceImage" />
                    @Html.ValidationMessageFor(m => m.HerospaceImage)
                </div>
            </div>
            


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label for="Item_IsArchived">
                            @Html.CheckBoxFor(m => m.Item.IsArchived) Is Archived
                        </label>
                    </div>
                    @Html.ValidationMessageFor(m => m.Item.IsArchived)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update Herospace Item</button>
                </div>
            </div>

        </div>
        
    }
</div>