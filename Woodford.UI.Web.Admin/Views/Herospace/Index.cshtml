@model List<HerospaceItemModel>
@{
    ViewBag.Title = "Manage Herospace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Herospace</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Herospace Items</h3>
    </div><!-- /.box-header -->

    <div class="box-body">
        <div class="admin-buttons">
            @Html.ActionLink("Add new Herospace item", "Add", "Herospace")
        </div>
    </div>
    @if (Model.Count() > 0) {
        <div class="box-body no-padding">
            <table class="table table-condensed">
                <tr>
                    <td></td>
                    <td></td>
                    <th scope="col">Title</th>                                        
                    <th scope="col">Link Url</th>                    
                    <th scope="col">Archived?</th>
                    <th scope="col">Sort Order</th>
                </tr>

                @foreach (var i in Model) {
                    <tr>
                        <td>@Html.ActionLink("Edit", "Edit", "Herospace", new { id = i.Id }, null)</td>
                        <td>                            
                            <img src="@Url.Action("Index", "Uploads", new { id = i.HerospaceImage.Id, filename = Utilities.GenerateSlug(i.HerospaceImage.Title) + i.HerospaceImage.FileExtension, width = 100, height = 100, crop = 1 })" alt="@i.Title" />                            
                        </td>
                        <td>@i.Title</td>                                                
                        <td>@i.LinkUrl</td>
                        <td>@(i.IsArchived ? "Archived" : "Live")</td>
                        <td>@i.SortOrder</td>
                    </tr>
                }

            </table>
        </div>

    } else {
        <div class="box-body">
            <p>No herospace items have been created yet</p>
        </div>
    }
</div>