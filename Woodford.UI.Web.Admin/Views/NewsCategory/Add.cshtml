@model NewsCategoryViewModel
@{
    ViewBag.Title = "Add News Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>News Category</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add News Category</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Add", "NewsCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
        
        <div class="box-body">

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.Category.Title, "Category Name", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Category.Title, new { placeholder = "Category Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Category.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Category.PageUrl, "Page Url", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Category.PageUrl, new { placeholder = "Page Url", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Category.PageUrl)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Category.PageTitle, "Page Title", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Category.PageTitle, new { placeholder = "Page Title", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Category.PageTitle)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Category.MetaKeywords, "Meta Keywords", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Category.MetaKeywords, new { placeholder = "Meta Keywords", @class = "form-control", rows = "3", cols = "20" })
                    @Html.ValidationMessageFor(m => m.Category.MetaKeywords)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Category.MetaDescription, "Meta Description", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Category.MetaDescription, new { placeholder = "Meta Description", @class = "form-control", rows = "3", cols = "20" })
                    @Html.ValidationMessageFor(m => m.Category.MetaDescription)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add News Category</button>
                </div>
            </div>

        </div>
        
    }
</div>