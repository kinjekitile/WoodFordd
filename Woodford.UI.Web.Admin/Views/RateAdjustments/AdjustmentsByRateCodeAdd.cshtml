@model RateAdjustmentViewModel
@{
    ViewBag.Title = "Add | Rate Adjustments By Rate Code";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Rate Adjustments by Rate Code</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add Rate Adjustment by Rate Code</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("AdjustmentsByRateCodeAdd", "RateAdjustments", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {

        <div class="box-body">            

                       
            <div id="dates-range">
                <div class="form-group">
                    @Html.LabelFor(m => m.RateAdjustment.StartDate, "Start Date", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.RateAdjustment.StartDate, new { placeholder = "Start Date", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RateAdjustment.StartDate)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.RateAdjustment.EndDate, "End Date", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.RateAdjustment.EndDate, new { placeholder = "End Date", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RateAdjustment.EndDate)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RateAdjustment.BranchId, "Branch", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.BranchFor(m => m.RateAdjustment.BranchId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RateAdjustment.BranchId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RateAdjustment.RateCodeId, "Rate Code", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.RateCodeFor(m => m.RateAdjustment.RateCodeId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RateAdjustment.RateCodeId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RateAdjustment.AdjustmentPercentage, "Adjustment Percentage", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.RateAdjustment.AdjustmentPercentage, new { placeholder = "Adjustment Percentage", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RateAdjustment.AdjustmentPercentage)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add Rate Code Adjustment</button>
                </div>
            </div>

        </div>

    }
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {            
            $('#RateAdjustment_StartDate,#RateAdjustment_EndDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'yyyy/mm/dd',
            });                        
        });

    </script>
}