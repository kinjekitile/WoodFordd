@model RateRuleViewModel
@{
    ViewBag.Title = "Edit Rate Rule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Rate Rules</h1>
}

@{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.Rule.GetType(), entityIdValue = Model.Rule.Id }); }

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit Rate Rule</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Edit", "RateRules", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
        @Html.HiddenFor(m => m.Rule.Id)
        <div class="box-body">

            <div class="form-group">
                @Html.LabelFor(m => m.Rule.Title, "Rule Name", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Rule.Title, new { placeholder = "Rule Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Rule.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rule.DaysOfWeek, "Days of Week", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Rule.DaysOfWeek, new { placeholder = "Days of Week", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Rule.DaysOfWeek)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rule.MinDays, "Min Days", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Rule.MinDays, new { placeholder = "Min Days", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Rule.MinDays)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rule.MaxDays, "Max Days", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Rule.MaxDays, new { placeholder = "Max Days", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Rule.MaxDays)
                </div>
            </div>

    



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update Rate Rule</button>
                </div>
            </div>

        </div>
        
    }
</div>
