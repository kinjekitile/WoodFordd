@model ReservationModel
@{
    ViewBag.Title = "Cancel Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Cancel Reservation</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Cancel Reservation</h3>

    </div><!-- /.box-header -->



    @using (Html.BeginForm("Cancel", "Reservations", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {

        <div class="box-body">
            <p>Are you sure you wish to cancel Reservation: @Model.Id ?</p>

            @Html.ValidationSummary()

            @Html.HiddenFor(x => x.User.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.IsCancelled, "Is Cancelled", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.CheckBoxFor(m => m.IsCancelled)
                    @Html.ValidationMessageFor(m => m.IsCancelled)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Cancel Reservation</button>
                </div>
            </div>


        </div>
    }
</div>