@model AuditViewModel

<div class="box">
    <div class="box-body">
        <div class="col-lg-1">
        @using (Ajax.BeginForm("AuditLog", "Audit", new { entityType = Model.EntityType, entityId = Model.EntityKeyValue, count = 20 }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "auditLog", OnComplete = "showResults" }, null)) {

            <button type="submit" class="btn btn-default">
                @*data-toggle="modal" data-target="#myModal"*@
                Audit Log
            </button>
        }
        </div>

        <div class="col-lg-2">
            @if (Model.HasPageContent) {
                using (Ajax.BeginForm("AuditLog", "Audit", new { entityType = "Woodford.Core.DomainModel.Models.PageContentModel", entityId = Model.PageContentId, count = 20 }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "auditLog", OnComplete = "showResults" }, null)) {

                    <button type="submit" class="btn btn-default">
                        @*data-toggle="modal" data-target="#myModal"*@
                        Page Content Audit Log
                    </button>
                }
            }
        </div>
    </div>
</div>