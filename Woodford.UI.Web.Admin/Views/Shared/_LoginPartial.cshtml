@if (Request.IsAuthenticated) {

    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="hidden-xs">@WebMatrix.WebData.WebSecurity.CurrentUserName</span>
    </a>
    <ul class="dropdown-menu">
        
        <li class="user-footer">

            <div class="pull-right">

                @using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm" })) {
                    @Html.AntiForgeryToken()
                    <a class="btn btn-default btn-flat" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                }

            </div>
        </li>


    </ul>

}