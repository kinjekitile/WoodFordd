@model UserSetPasswordViewModel
@{
    ViewBag.Title = "Update Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Woodford Users</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Update Password</h3>

    </div><!-- /.box-header -->



    @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {

        <div class="box-body">
            <p>Set new password for: @Model.User.FirstName @Model.User.LastName</p>

            @Html.ValidationSummary()

            @Html.HiddenFor(x => x.User.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, "New Password", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.NewPassword, new { placeholder = "New Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update User Password</button>
                </div>
            </div>


        </div>
    }
</div>