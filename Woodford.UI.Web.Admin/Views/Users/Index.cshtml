<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Users</h3>

    </div><!-- /.box-header -->

    <p>@Html.ActionLink("Add User", "Add")</p>

    @if (Model.Items.Count > 0) {
        <p>
            @{ Html.RenderPartial("_ExportAsExcelPartial", Model.Filter); }
        </p>
        <div class="box-body no-padding">
            <table class="table table-condensed">

                <tr>
                    <th scope="col"></th>
                    <th scope="col">Email</th>
                    <th scope="col">Name</th>
                    <th scope="col">Cell Number</th>
                    <th scope="col">Tier</th>
                    <th scope="col">Number</th>
                    <th scope="col">Advance Total</th>
                    <th scope="col">Advance Remaining</th>
                    <th scope="col">Advance Spent</th>
                </tr>

                @foreach (var u in Model.Items) {
                    <tr>
                        <td>@Html.ActionLink("Details", "Details", "Users", new { id = u.Id }, null)</td>
                        <td><a href="mailto:@(u.Email)">@u.Email</a></td>
                        <td>@u.FirstName @u.LastName</td>
                        <td>@u.MobileNumber</td>
                        <td>
                            @if (u.IsLoyaltyMember) {
                                <text>@u.LoyaltyTier.GetDescription()</text>
                            }

                        </td>
                        <td>
                            @if (u.IsLoyaltyMember) {
                                <text> @u.LoyaltyNumberFull </text>
                            }
                        </td>
                        <td>
                            @if (u.IsLoyaltyMember) {
                                if (u.LoyaltyPointsEarned.HasValue) {
                                    <text>@decimal.Round(u.LoyaltyPointsEarned.Value, 2)</text>
                                }
                                else {
                                    <text>0.00</text>
                                }
}
                            

                        </td>
                        <td>
                            @if (u.IsLoyaltyMember) {
                                <text> @decimal.Round(u.LoyaltyPointsRemaining, 2) </text>
                            }
                            
                        </td>
                        <td>
                            @if (u.IsLoyaltyMember) {
                                <text> @(u.LoyaltyPointsSpent.HasValue ? decimal.Round(u.LoyaltyPointsSpent.Value, 2).ToString() : "") </text>
                            }
                            
                        </td>
                    </tr>
                }

            </table>
        </div>
                }

    @if (Model.Items.Count() > 0) {
        @Html.Partial("_PaginationPartial", Model.Pagination)
    }
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {




            $('#Filter_DateCreatedStart,#Filter_DateCreatedEnd').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'yyyy/mm/dd',
            });




        });


    </script>
}
