@model UserSearchViewModel
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Woodford Users</h1>
}


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Search</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm("Filter", "Users", FormMethod.Get, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {

            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.DateFilterType, "Date Search", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.UserDateFilterTypeFor(m => m.Filter.DateFilterType, new { placeholder = "Date Search", @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.DateCreatedStart, "Start Date", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Filter.DateCreatedStart, new { placeholder = "Start Date", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filter.DateCreatedStart)
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.DateCreatedEnd, "End Date", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Filter.DateCreatedEnd, new { placeholder = "End Date", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filter.DateCreatedEnd)
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.Email, "Email", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Filter.Email, new { placeholder = "Email", @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.FirstName, "First name", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Filter.FirstName, new { placeholder = "First name", @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.LastName, "Last name", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Filter.LastName, new { placeholder = "Last name", @class = "form-control" })

                        </div>
                    </div>
                </div>
            </div>
            if (Roles.IsUserInRole("Administrator")) {
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Filter.LoyaltyLevel, "Loyalty Tier", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.LoyaltyBenefitTierFor(m => m.Filter.LoyaltyLevel, new { placeholder = "Loyalty Tier", @class = "form-control" }, showAll: true)

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Filter.CorporateId, "Corporate", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.CorporateFor(m => m.Filter.CorporateId, new { placeholder = "Corporate", @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Filter.HasSpentPoints, "Has Spent Points", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.Filter.HasSpentPoints, new { placeholder = "Has Spent Points", @class = "form-control" })

                            </div>
                        </div>
                    </div>
                </div>
            }




            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.SortField, "Sort Field", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.UserSortFieldFor(m => m.Filter.SortField, new { placeholder = "Sort Field", @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.SortDirection, "Sort Direction", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.UserSortDirectionFor(m => m.Filter.SortDirection, new { placeholder = "Sort Direction", @class = "form-control" })

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

