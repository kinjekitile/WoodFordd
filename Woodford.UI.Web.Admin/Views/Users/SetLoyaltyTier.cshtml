@model UserModel
@{
    ViewBag.Title = "Set Loyalty Tier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Woodford Users</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Set Loyalty Tier</h3>

    </div><!-- /.box-header -->



    @using (Html.BeginForm("SetLoyaltyTier", "Users", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {

        <div class="box-body">
            <p>@Model.FirstName @Model.LastName</p>

            @Html.ValidationSummary()

            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.LoyaltyTierId, "Tier", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.LoyaltyBenefitTierFor(m => m.LoyaltyTierId, new { placeholder = "Tier", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LoyaltyTierId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update Loyalty Tier</button>
                </div>
            </div>


        </div>
    }
</div>