@model VehicleExclusionsViewModel
@{
    ViewBag.Title = "Vehicle Availability & Exclusions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Vehicle Availability & Exclusions</h1>
}

@using (Html.BeginForm("Filter", "VehicleAvailabilityExclusions", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Filter</h3>
        </div><!-- /.box-header -->

        <div id="filter" class="box-body">

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.BranchId, "Branch", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.BranchFor(m => m.BranchId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BranchId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ShowPastExclusions, "Show Past Exclusions", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.CheckBoxFor(m => m.ShowPastExclusions)
                    @Html.ValidationMessageFor(m => m.ShowPastExclusions)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>

        </div>
    </div>

}

@if (Model.Filtered) {

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Vehicles available at branch</h3>
        </div><!-- /.box-header -->

        <div id="results" class="box-body">

            <table class="table table-condensed">
                <tr>
                    <td></td>
                    <td>Vehicle</td>
                    <td></td>
                </tr>
                @foreach (var bv in Model.BranchVehicles.Items) {
                    <tr>
                        <td>@Html.ActionLink("Add Exclusion", "Add", "VehicleAvailabilityExclusions", new { branchId = Model.BranchId, vehicleId = bv.VehicleId, branchVehicleId = bv.Id }, null)</td>
                        <td>@bv.Vehicle.Title</td>
                    </tr>
                    foreach (var exclusion in bv.Exclusions) {
                        <tr>
                            <td>@Html.ActionLink("Edit", "Edit", "VehicleAvailabilityExclusions", new { id = exclusion.Id, vehicleId = bv.VehicleId, branchId = Model.BranchId }, null) </td>
                            <td>Not available: @exclusion.StartDate.ToString("dd/MM/yyyy") - @exclusion.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @using (Html.BeginForm("Delete", "VehicleAvailabilityExclusions", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                                    @Html.Hidden("exclusionId", exclusion.Id)
                                    @Html.Hidden("branchId", Model.BranchId)
                                    <button type="submit" class="btn btn-primary">Delete Exclusion</button>
                                }
                        </tr>
                    }
                }
            </table>



        </div>
    </div>

}