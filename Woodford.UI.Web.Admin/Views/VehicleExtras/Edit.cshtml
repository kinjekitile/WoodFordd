@model VehicleExtrasViewModel
@{
    ViewBag.Title = "Edit Vehicle Extra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Vehicle Extras</h1>
}

@{ Html.RenderAction("RenderAuditContainer", "Audit", new { entityType = Model.Equals.GetType(), entityIdValue = Model.Equals.Id }); }

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit Vehicle Extra</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Edit", "VehicleExtras", FormMethod.Post, new { id = Model.Extra.Id, enctype = "multipart/form-data", @class = "form-horizontal", role = "form" })) {
        @Html.HiddenFor(m => m.Extra.Id)
        
        <div class="box-body">


            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.Extra.Title, "Extra Name", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Extra.Title, new { placeholder = "Extra Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Extra.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Extra.Price, "Price", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Extra.Price, new { placeholder = "Price", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Extra.Price)
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update Extra</button>
                </div>
            </div>

        </div>
        
    }
</div>

