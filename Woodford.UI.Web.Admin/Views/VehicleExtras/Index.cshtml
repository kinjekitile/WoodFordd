@model List<VehicleExtrasModel>
@{
    ViewBag.Title = "Vehicle Extras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Vehicle Extras</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Vehicle Extras</h3>
    </div><!-- /.box-header -->

    <div class="box-body">
        <div class="admin-buttons">
            @Html.ActionLink("Add new Corporate", "Add", "VehicleExtras")
        </div>
    </div>
    @if (Model.Count() > 0) {
        <div class="box-body no-padding">
            <table class="table table-condensed">

                <tr>
                    <td></td>
                    
                    <th scope="col">Name</th>                    
                    <th scope="col">Price</th>
                    
                </tr>

                @foreach (var b in Model) {
                    <tr>
                        <td>@Html.ActionLink("Edit", "Edit", "VehicleExtras", new { id = b.Id }, null)</td>
                        
                        <td>@b.Title</td>
                        <td>@b.Price</td>
                    </tr>
                }

            </table>
        </div>

    } else {
        <div class="box-body">
            <p>No extras have been created yet</p>
        </div>
    }
    
</div>
