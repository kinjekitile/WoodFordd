@model ListOf<VehicleGroupModel>
@{
    ViewBag.Title = "Vehicle Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Vehicle Groups</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Groups</h3>
    </div><!-- /.box-header -->

    <div class="box-body">
        <div class="admin-buttons">
            @Html.ActionLink("Add new Vehicle Group", "Add", "VehicleGroups")
        </div>
    </div>
    @if (Model.Items.Count() > 0) {
        <div class="box-body no-padding">
            <table class="table table-condensed">
                <tr>
                    <td></td>
                    @*<td></td>*@
                    <th scope="col">Vehicle Group Name</th>                    
                    <th scope="col">Vehicle Group Description</th>
                    <th scope="col">Page Url</th>                    
                    <th scope="col">Archived?</th>
                </tr>

                @foreach (var g in Model.Items) {
                    <tr>
                        <td>@Html.ActionLink("Edit", "Edit", "VehicleGroups", new { id = g.Id }, null)</td>
                        @*<td>
                            @if (g.FileUploadId.HasValue) {
                                <img src="@Url.Action("Index", "Uploads", new { id = g.VehicleGroupImage.Id, filename = g.VehicleGroupImage.Title + g.VehicleGroupImage.FileExtension, width = 100, height = 100, crop = 1 })" alt="@g.Title" />
                            }
                        </td>*@
                        <td>@g.Title</td>                        
                        <td>@g.TitleDescription</td> 
                        <td>@g.PageUrl</td>
                        <td>@(g.IsArchived ? "Archived" : "Live")</td>
                    </tr>
                }

            </table>
        </div>

    } else {
        <div class="box-body">
            <p>No vehicle groups have been created yet</p>
        </div>
    }
    @if (Model.Items.Count() > 0) {
        @Html.Partial("_PaginationPartial", Model.Pagination)
    }
</div>