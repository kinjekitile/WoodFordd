@model VehicleUpgradeViewModel
@{
    ViewBag.Title = "Add Vehicle Upgrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section H1 {
    <h1>Vehicle Upgrades</h1>
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add Vehicle Upgrade</h3>
    </div><!-- /.box-header -->

    @using (Html.BeginForm("Add", "VehicleUpgrades", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
        
        <div class="box-body">

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.VehicleUpgrade.FromVehicleId, "From Vehicle", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.VehicleFor(m => m.VehicleUpgrade.FromVehicleId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VehicleUpgrade.FromVehicleId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.VehicleUpgrade.ToVehicleId, "To Vehicle", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.VehicleFor(m => m.VehicleUpgrade.ToVehicleId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VehicleUpgrade.ToVehicleId)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.VehicleUpgrade.StartDate, "Start Date", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.VehicleUpgrade.StartDate, new { placeholder = "Start Date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VehicleUpgrade.StartDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.VehicleUpgrade.EndDate, "End Date", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.VehicleUpgrade.EndDate, new { placeholder = "End Date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VehicleUpgrade.EndDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.VehicleUpgrade.BranchId, "Branch", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.BranchFor(m => m.VehicleUpgrade.BranchId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VehicleUpgrade.BranchId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.VehicleUpgrade.UpgradeAmount, "Upgrade Amount", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.VehicleUpgrade.UpgradeAmount, new { placeholder = "Upgrade Amount", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.VehicleUpgrade.UpgradeAmount)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Add Vehicle Upgrade</button>
                </div>
            </div>

        </div>
        
    }
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            cleanDate('VehicleUpgrade_StartDate');
            cleanDate('VehicleUpgrade_EndDate');

            $('#VehicleUpgrade_StartDate,#VehicleUpgrade_EndDate').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'yyyy/mm/dd',
            });
        });

    </script>
}