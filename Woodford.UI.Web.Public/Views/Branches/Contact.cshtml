@model BranchContactViewModel
@{
    ViewBag.Title = Model.Branch.BranchContactPageTitle;
    ViewBag.MetaKeywords = Model.Branch.BranchContactMetaKeywords;
    ViewBag.MetaDescription = Model.Branch.BranchContactMetaDescription;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="twelve columns">
        <h1>Contact @Model.Branch.Title</h1>
    </div>
</div>


<div class="row">
    <div class="six columns">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="input-form vertical-form">
                <div class="row">
                    @Html.LabelFor(m => m.ContactUs.FullName, "Full Name")
                    @Html.TextBoxFor(m => m.ContactUs.FullName, new { placeholder = "Full Name" })
                    @Html.ValidationMessageFor(m => m.ContactUs.FullName)
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.ContactUs.Email, "Email")
                    @Html.TextBoxFor(m => m.ContactUs.Email, new { placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.ContactUs.Email)
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.ContactUs.ContactNumber, "Contact Number")
                    @Html.TextBoxFor(m => m.ContactUs.ContactNumber, new { placeholder = "Contact Number" })
                    @Html.ValidationMessageFor(m => m.ContactUs.ContactNumber)
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.ContactUs.Country, "Country")
                    @Html.CountryDropListFor(m => m.ContactUs.Country)
                    @Html.ValidationMessageFor(m => m.ContactUs.Country)
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.ContactUs.Subject, "Subject of Enquiry")
                    @Html.TextBoxFor(m => m.ContactUs.Subject, new { placeholder = "Subject of Enquiry" })
                    @Html.ValidationMessageFor(m => m.ContactUs.Subject)
                </div>
                <div class="row">
                    @Html.LabelFor(m => m.ContactUs.Message, "Message")
                    @Html.TextAreaFor(m => m.ContactUs.Message, new { placeholder = "Message" })
                    @Html.ValidationMessageFor(m => m.ContactUs.Message)
                </div>
                <div class="row">
                    <input type="submit" value="Submit" />
                </div>
            </div>
        }

    </div>
    <div class="six columns">
        @if (Model.Branch.FileUploadId.HasValue) {
            <img src="@Url.Action("Index", "Uploads", new { id = Model.Branch.BranchImage.Id, filename = Model.Branch.BranchImage.Title + Model.Branch.BranchImage.FileExtension, width = 600 })" alt="@Model.Branch.Title" />
        }
        <div class="rich-text">
            @Html.Raw(Model.Branch.BranchContactPageContent)
            @Html.ActionLink("Read More", "Branch", "Branches", new { branchUrl = Model.Branch.PageUrl }, null)
        </div>
    </div>
</div>


