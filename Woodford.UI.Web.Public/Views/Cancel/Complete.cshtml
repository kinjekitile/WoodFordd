@model ReservationViewModel
@{
    ViewBag.Title = "Reservation Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    @*<div class="three columns">
            <div class="nav-block">
                @{Html.RenderPartial("_UserNavigationPartial"); }
            </div>
        </div>*@


    <div class="seven columns">

        <div class="reservation-number">
            <h2>Reservation Number: <span>@Model.Reservation.Id</span></h2>
        </div>

        <p class="thank-you-message">Your reservation has been cancelled.</p>

        @if (Model.Reservation.CancellationFee.HasValue) {
            if (Model.Reservation.CancellationFee.Value > 0) {
                <p>You have been charged a cancellation fee of: R @Model.Reservation.CancellationFee.Value.ToString("#,##0.00")</p>
            }
        }

        @if (Model.Reservation.RefundedAmount.HasValue) {
            if (Model.Reservation.RefundedAmount.Value > 0) {
                <p>You have been redunded: R @Model.Reservation.RefundedAmount.Value.ToString("#,##0.00")</p>
            }
        }

</div>

@section scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $(".printquote").on("click", function (e) {
                var url = "@Url.Action("Print","Checkout", new { id = Model.Reservation.Id })";
                var windowName = "";
                var win = window.open(url, windowName, 'width=700,height=800,scrollbars=yes');
                win.focus();
                e.preventDefault();
                return false;
            });
        });
    </script>



}