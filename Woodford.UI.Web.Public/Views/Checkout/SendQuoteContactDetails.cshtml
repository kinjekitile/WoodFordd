@model ReservationQuoteContactDetailsModel
@{
    ViewBag.Title = "Email Quote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="twelve columns">
        <h1>Quote</h1>
    </div>
</div>

<div class="row">
    <div class="eight columns">

        <div class="reservation-number">
            Reservation Number: <span>@Model.ReservationId</span>
        </div>

        <p>Please provide your personal details so that we can send you your quote.</p>
        
        @using (Html.BeginForm()) {
            <div class="input-form vertical-form">
                <div class="row">
                    @Html.LabelFor(m => m.Email, "Email")
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="row">
                    @Html.LabelFor(m => m.FirstName, "First Name")
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName)

                </div>
                <div class="row">
                    @Html.LabelFor(m => m.LastName, "Last Name")
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>

                <div class="row">
                    <input type="submit" value="Send" />
                </div>
            </div>
        }




    </div>




</div>