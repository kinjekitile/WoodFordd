@{ Html.RenderPartial("_SearchResultsPartial", Model); }

    @section scripts {

        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.countdown.js")"></script>


        @{
            int expirySeconds = 0;
            if (Model.CountdownSpecial != null) {
                expirySeconds = Convert.ToInt32((Model.CountDownSpecialExpiry - DateTime.Now).TotalSeconds);
            }
        }
        @if (expirySeconds > 0) {
            <script type="text/javascript">
                $(document).ready(function () {
                    $(".count-down-special-container").show();

                    $('.count-down-special').countdown({
                        until: +@expirySeconds,
                        format: 'MS',
                        compact: true,
                        onExpiry: function () {
                            $('.count-down-special-container').hide();
                            $("label").removeClass("count-down-special-rate");
                        }
                    });
                });
            </script>
        }
        else {
            <script type="text/javascript">
                $(document).ready(function () {
                    $(".count-down-special-container").hide();
                    $("label").removeClass("count-down-special-rate");
                });
            </script>
        }

        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.format-1.3.min.js")"></script>

      
    }