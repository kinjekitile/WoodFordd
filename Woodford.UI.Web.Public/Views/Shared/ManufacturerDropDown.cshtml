@model List<VehicleManufacturerModel>



@if (Model.Count > 0) {
    <ul class="rollover-menu">
        @for (int x = 0; x < (Math.Ceiling(Convert.ToDecimal(Model.Count) / 2m)); x+=1) {
            <li>
                @if (x * 2 <= Model.Count - 1) {
                    <a style="float: left; min-width:50px;" href="/vehicle-hire/@(Model[x * 2].PageUrl)">@Model[x * 2].Title</a>
                }
               
                @if (((x * 2) + 1) <= Model.Count - 1) {
                   <a style="float: right; min-width:50px;" href="/vehicle-hire/@(Model[(x * 2) + 1].PageUrl)">@Model[(x * 2) + 1].Title</a>
                }
                

            </li>
        }
    </ul>

}


