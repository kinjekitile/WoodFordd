@model List<HerospaceItemModel>

@if (Model.Count > 0) {
    @*<section class="slider">*@
    <div class="flexslider carousel">
        <ul class="slides">
            @foreach (var i in Model.OrderBy(x => x.SortOrder).ToList()) {
                <li>
                    <a href="@i.LinkUrl">
                        <img src="@Url.Action("Index", "Uploads", new { id = i.HerospaceImage.Id, filename = Utilities.GenerateSlug(i.HerospaceImage.Title) + i.HerospaceImage.FileExtension, width = 998, context = "images/slideshow" })" alt="@i.Title" />
                    </a>
                </li>
            }
        </ul>
    </div>
        @*</section>*@
}