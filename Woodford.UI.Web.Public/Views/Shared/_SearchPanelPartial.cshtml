@model SearchCriteriaViewModel
@{
    bool isMinimised = false;
    if (ViewBag.PanelMinimised != null) {
        isMinimised = Convert.ToBoolean(ViewBag.PanelMinimised);
    }
}

<div class="container">
    <div id="search-panel" class="row@(isMinimised ? " panel-minimised" : "")">
        @using (Html.BeginForm("Results", "Search", FormMethod.Get)) {
            <div class="three columns search-panel-header-container" id="search-panel-container">

                <div class="search-panel-header">

                    <img src="@Url.Content("~/Content/images/search-and-book.png")" alt="" />
                    <h2>

                        Search &amp; Book

                    </h2>

                </div>

            </div>

            <div class="nine columns search-panel-expanded-view">
                <div class="row">
                    <div class="four columns search-panel-expanded-view">

                        @Html.LabelFor(m => m.Criteria.PickUpLocationId, "Pickup Location")
                        <input type="text" placeholder="Enter Pickup Location" id="txtPickupLocation" readonly />
                        @Html.BranchFor(m => m.Criteria.PickUpLocationId, new { style = "display: none;" })
                        @*<input type="checkbox" id="Criteria_IsReturnDifferentLocation" />*@



                    </div>

                    <div class="four columns search-panel-expanded-view">
                        @Html.CheckBoxFor(x => x.IsReturnDifferentLocation)
                        <label id="lblDropoffDiffLocation" class="for-checkbox" for="IsReturnDifferentLocation" style="padding-top: 30px;">Return at a different location</label>

                        <div id="different-return-location" style="display: none;">
                            <input type="text" placeholder="Enter Drop Off Location" id="txtDropOffLocation" readonly />
                            @Html.BranchFor(m => m.Criteria.DropOffLocationId, new { style = "display: none;" })
                        </div>

                    </div>
                    <div class="four columns search-panel-expanded-view">


                    </div>
                </div>

                <div class="row">
                    <div class="four columns search-panel-expanded-view">
                        <div class="row">
                            <div class="six columns search-panel-expanded-view">
                                @Html.LabelFor(m => m.Criteria.PickupDateTime, "Pickup Date")
                                @Html.DatePickerFor(m => m.PickupDate, new { style = "width: 100%;" })
                            </div>

                            <div class="six columns search-panel-expanded-view">

                                @Html.TextBoxFor(x => x.Criteria.PickupTimeFull, new { style = "width: 100%;margin-top: 36px;" })
                            </div>

                        </div>


                        @*@Html.HourOfDayDropDownListFor(m => m.Criteria.PickupTime, new { @class = "timefield", style = "display: none;" })*@


                    </div>


                    <div class="four columns search-panel-expanded-view">
                        <div class="row">
                            <div class="six columns search-panel-expanded-view">
                                @Html.LabelFor(m => m.Criteria.DropOffDate, "Drop Off Date")
                                @Html.DatePickerFor(m => m.DropOffDate, new { @class = "datefield" })
                            </div>

                            <div class="six columns search-panel-expanded-view">
                                @Html.TextBoxFor(x => x.Criteria.DropOffTimeFull, new { style = "width: 100%;margin-top: 36px;" })
                                @*@Html.HourOfDayDropDownListFor(m => m.Criteria.DropOffTime, new { @class = "timefield" })*@
                            </div>
                        </div>

                       
                        
                    </div>
                    <div class="four columns search-panel-expanded-view">
                        <input type="submit" value="Search" style="padding: 0 40px;" />

                    </div>
                </div>
            </div>

            @*<div class="search-panel-expanded-view">*@


            @Html.HiddenFor(m => m.AirportLocationIds)
            @*</div>*@
            <a href="#" class="toggle-search-panel">
                <i></i>
            </a>
        }

    </div>

    @if (ViewBag.ShowError != null) {
        if (ViewBag.ShowError) {
            <div class="row">
                @*search-panel-expanded-view*@
                <div class="three columns">
                    &nbsp;
                </div>
                <div class="seven columns">
                    @Html.ValidationSummary()
                </div>
                <div class="two columns">
                    &nbsp;
                </div>
            </div>
        }
    }

    <div class="row">

        <hr style="border-top:1px solid #999;" />


    </div>

</div>