@model ChangeEmailAddressViewModel
@{
    ViewBag.Title = "Change Email Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="four columns">
        <div class="nav-block">
            @{Html.RenderPartial("_UserNavigationPartial"); }
        </div>
    </div>


    <div class="eight columns">
        <h2>Change Email Address</h2>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <div class="input-form vertical-form">
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.User.Email, "Email")
                    </div>
                    <div class="eight columns">                        
                        @Html.TextBoxFor(m => m.User.Email, new { placeholder = "Email", @readonly = "readonly", @class = "readonly" })
                    </div>
                </div>
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.NewEmail, "New Email Address")
                    </div>
                    <div class="eight columns">
                        @Html.TextBoxFor(m => m.NewEmail, new { placeholder = "New Email Address" })
                        @Html.ValidationMessageFor(m => m.NewEmail)
                    </div>
                </div>
                <div class="row">
                    <div class="four columns empty-column">&nbsp;</div>
                    <div class="eight columns">
                        <input type="submit" value="Update" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>