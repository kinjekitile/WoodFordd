@model BookingClaimModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Claim Booking";
}


<style type="text/css">
    .booking-claim-form label {
        text-align: left;
    }

    .booking-claim-form input[type="text"] {
        width: 50% !important;
    }

    .booking-claim-form select {
        width: 50% !important;
    }
</style>

<div class="row">
    <div class="three columns">
        <div class="nav-block">
            @{Html.RenderPartial("_UserNavigationPartial"); }
        </div>
    </div>

    <div class="nine columns">

        <h1>Claim a Booking</h1>

        <p>In order to claim a booking you made directly at one of our branches, please fill in and submit the form below.</p>

        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
            
            @Html.AntiForgeryToken()
            <div class="input-form booking-claim-form">
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.BookingPickupDate, "Pick Up Date")
                    </div>
                    <div class="nine columns">
                        @Html.DatePickerFor(m => m.BookingPickupDate, new { placeholder = "" })
                        @Html.ValidationMessageFor(m => m.BookingPickupDate)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.BookingDropoffDate, "Drop Off Date")
                    </div>
                    <div class="nine columns">
                        @Html.DatePickerFor(m => m.BookingDropoffDate, new { placeholder = "" })
                        @Html.ValidationMessageFor(m => m.BookingDropoffDate)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.BookingPickupBranchId, "Collection Branch")
                    </div>
                    <div class="nine columns">
                        @Html.BranchFor(m => m.BookingPickupBranchId)
                        @Html.ValidationMessageFor(m => m.BookingPickupBranchId)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.BookingDropofBranchId, "Return Branch")
                    </div>
                    <div class="nine columns">
                        @Html.BranchFor(m => m.BookingDropofBranchId)
                        @Html.ValidationMessageFor(m => m.BookingDropofBranchId)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.Email, "Email")
                    </div>
                    <div class="nine columns">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.FirstName, "First Name")
                    </div>
                    <div class="nine columns">
                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.LastName, "Last Name")
                    </div>
                    <div class="nine columns">
                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                </div>
                <div class="row">
                    <div class="three columns">
                        @Html.LabelFor(m => m.IdNumber, "Id Number")
                    </div>
                    <div class="nine columns">
                        @Html.TextBoxFor(m => m.IdNumber, new { placeholder = "Id Number" })
                        @Html.ValidationMessageFor(m => m.IdNumber)
                    </div>
                </div>

                <div class="row">
                    <div class="three columns empty-column">&nbsp;</div>
                    <div class="nine columns"><input type="submit" value="Claim Booking" /></div>
                </div>
            </div>
        }


    </div>

</div>

@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            cleanDate("@Html.IdFor(x=>x.BookingPickupDate)");
            setUpDatePicker($("#@Html.IdFor(x => x.BookingPickupDate)"));

            cleanDate("@Html.IdFor(x=>x.BookingDropoffDate)");
            setUpDatePicker($("#@Html.IdFor(x => x.BookingDropoffDate)"));
        });
    </script>
}
