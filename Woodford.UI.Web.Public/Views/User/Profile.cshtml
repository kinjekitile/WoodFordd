@model UserModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="four columns">
        <div class="nav-block">
            @{Html.RenderPartial("_UserNavigationPartial"); }
        </div>
    </div>

    <div class="eight columns">
        <h2>Profile</h2>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
            @Html.AntiForgeryToken()
            <div class="input-form vertical-form">
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.Email, "Email")
                    </div>
                    <div class="eight columns">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @readonly = "readonly", @class = "readonly" })
                    </div>
                </div>
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.FirstName, "First Name")
                    </div>
                    <div class="eight columns">
                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                </div>
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.LastName, "Last Name")
                    </div>
                    <div class="eight columns">
                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                </div>
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.MobileNumber, "Cell")
                    </div>
                    <div class="eight columns">
                        @Html.TextBoxFor(m => m.MobileNumber, new { placeholder = "Cell" })
                        @Html.ValidationMessageFor(m => m.MobileNumber)
                    </div>
                </div>
                <div class="row">
                    <div class="four columns">
                        @Html.LabelFor(m => m.IdNumber, "Id Number")
                    </div>
                    <div class="eight columns">
                        @Html.TextBoxFor(m => m.IdNumber, new { placeholder = "Id Number" })
                        @Html.ValidationMessageFor(m => m.IdNumber)
                    </div>
                </div>
                <div class="row">
                    <div class="four columns empty-column">&nbsp;</div>
                    <div class="eight columns">
                        <input type="submit" value="Update" />
                    </div>
                </div>
                
            </div>
        }
    </div>

</div>